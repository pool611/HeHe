<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/_green"
    android:paddingLeft="@dimen/main_title1_logo_padding_size"
    android:paddingRight="@dimen/main_title1_logo_padding_size" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:contentDescription="@string/hello_world"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/app_name"
            android:textColor="@color/_white"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >

        <!-- 音频播放选项 -->

        <ImageButton
            android:id="@id/id_iv_main_radiomore"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/_green"
            android:scaleType="centerInside"
            android:src="@drawable/main_ib_radiomore" />
        
        <!-- 投稿选项 -->
        <ImageButton
            android:id="@id/id_iv_main_contribute"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/_green"
            android:scaleType="centerInside"
            android:src="@drawable/joker_icon_contribute1" />

        <!-- 审查选项 -->
        <ImageButton
            android:id="@id/id_iv_main_check"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/_green"
            android:scaleType="centerInside"
            android:src="@drawable/joker_icon_check"
            android:visibility="gone" />

        <!-- 更多选项 -->
        <ImageButton
            android:id="@id/id_iv_main_more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/_green"
            android:scaleType="centerInside"
            android:src="@drawable/joker_icon_more" />
    </LinearLayout>

</RelativeLayout>