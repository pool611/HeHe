<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:orientation="vertical"
    android:paddingTop="@dimen/main_popwindow_ll_padding_top_size" >

    <!-- @author：李颜翎 -->
    <!-- @说明：在主页面上点击“更多”，弹出的菜单，即为如下 -->
    <!-- 所有用户可选功能全部列出，请在程序中根据用户身份，对用户不可用的操作进行隐藏 -->


    <!-- 注册 图片和文字 -->

    <Button
        android:id="@+id/userInfoReviseButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/_darkgreen"
        android:drawableLeft="@drawable/profile_edit"
        android:paddingLeft="20dp"
        android:paddingRight="25dp"
        android:text="修改信息 "
        android:textColor="@color/_white"
        android:textSize="@dimen/main_popwindow_text_size" />

    <!-- 登陆 图片和文字 -->

    <Button
        android:id="@+id/userInfoGovernerButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/_darkgreen"
        android:drawableLeft="@drawable/joker_icon_authority"
        android:paddingLeft="20dp"
        android:paddingRight="25dp"
        android:text="申请管理员"
        android:textColor="@color/_white"
        android:textSize="@dimen/main_popwindow_text_size" />

    <!-- 个人中心 图片和文字 -->

   

</LinearLayout>