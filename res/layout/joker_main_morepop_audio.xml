<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:orientation="vertical"
    android:paddingTop="@dimen/main_popwindow_ll_padding_top_size" >

    <!-- @author：李颜翎 -->
    <!-- @说明：在主页面上点击“更多”，弹出的菜单，即为如下 -->
    <!-- 所有用户可选功能全部列出，请在程序中根据用户身份，对用户不可用的操作进行隐藏 -->


    <!-- 发音人 -->

    <Button
        android:id="@id/id_main_pop_role"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/_darkgreen"
        android:drawableLeft="@drawable/icon_main_audiorole"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        android:text="@string/tag_main_audiorole"
        android:textColor="@color/_white"
        android:textSize="@dimen/main_popwindow_text_size" />

    <!-- 播放语速 -->

    <Button
        android:id="@id/id_main_pop_speed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/_darkgreen"
        android:drawableLeft="@drawable/icon_main_audiospeed"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        android:text="@string/tag_main_audiospeed"
        android:textColor="@color/_white"
        android:textSize="@dimen/main_popwindow_text_size" />


</LinearLayout>